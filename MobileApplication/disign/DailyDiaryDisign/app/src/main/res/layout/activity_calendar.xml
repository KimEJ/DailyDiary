<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.kim_eojin.dailydiarydisign.CalendarActivity">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorMain"
        android:weightSum="1"
        app:titleTextColor="#ffffff">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_centerVertical="true"
                android:background="@drawable/menu" />

            <LinearLayout
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/right_button" >
                <TextView
                    android:id="@+id/yearNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/monthNum"
                    android:layout_centerInParent="true"
                    android:text="2017"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/monthNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:text="7"
                    android:textColor="@color/colorWhite"
                    android:textSize="24dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/left_arrow_none"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/left_arrow_none"
                android:layout_toLeftOf="@+id/num"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:id="@+id/right_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/right_arrow_none"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/search"
                android:layout_marginRight="70dp" />

            <ImageButton
                android:id="@+id/search"
                android:layout_width="33sp"
                android:layout_height="33sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/setting"
                android:background="@drawable/search" />

            <ImageButton
                android:id="@+id/setting"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/setting" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22sp"
        android:bottom="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일"
            android:textAlignment="center"
            android:textColor="#ff0000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="월"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="화"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="수"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="목"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="금"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="토"
            android:textAlignment="center"
            android:textColor="#0000ff" />
    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </GridView>
</LinearLayout>
